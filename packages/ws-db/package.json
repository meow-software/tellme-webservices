{
  "name": "@tellme/ws-db",
  "version": "1.0.0",
  "description": "The DB package provides a centralized and consistent way to interact with databases across all TellMe backend services.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "npm run build --workspace=@tellme/ws-db",
    "devw": "powershell -Command \"Remove-Item -Recurse -Force ./dist\" && npm run build --workspace=@tellme/ws-db",
    "devl": "rm -r ./dist/ && npm run build --workspace=@tellme/ws-db",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./src/generated/prisma/index.d.ts",
      "default": "./src/generated/prisma/index.js"
    }
  },
  "files": [
    "dist",
    "src/generated/prisma"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@nestjs/schematics": "^11.0.7",
    "@types/node": "^22.18.1",
    "prisma": "^6.15.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@prisma/client": "^6.15.0"
  }
}
