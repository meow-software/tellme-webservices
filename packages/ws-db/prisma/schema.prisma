generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt   @id
  username String   @unique
  password String  
  email    String?   @unique
  isConfirmed Boolean @default(false)
  bot Bot?
}

model Bot {
  id    BigInt @id
  token String
  user  User   @relation(fields: [id], references: [id])
}
